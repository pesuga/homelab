# Family AI Platform Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://family_ai:password@localhost:5432/family_ai
POSTGRES_DB=family_ai
POSTGRES_USER=family_ai
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Family AI Configuration
FAMILY_NAME=Your Family
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en
TIMEZONE=America/Mexico_City

# Voice Service Configuration
WHISPER_MODEL=small
WHISPER_DEVICE=cpu  # or cuda for GPU acceleration
VOICE_WAKE_WORD=hola familia
VOICE_LANGUAGE=es

# Matrix Configuration
MATRIX_HOMESERVER=https://matrix.org
MATRIX_BOT_USERNAME=familybot
MATRIX_BOT_PASSWORD=your-matrix-bot-password
MATRIX_ACCESS_TOKEN=your-matrix-access-token

# Home Assistant Configuration (optional)
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your-home-assistant-long-lived-access-token

# Traefik Configuration
TRAEFIK_DASHBOARD_USERNAME=admin
TRAEFIK_DASHBOARD_PASSWORD=change-me

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
ENVIRONMENT=production

# Feature Flags
ENABLE_VOICE_INTERFACE=true
ENABLE_MATRIX_INTEGRATION=true
ENABLE_HOME_ASSISTANT=true
ENABLE_PARENTAL_CONTROLS=true

# Parental Controls
PARENTAL_CONTENT_FILTER=true
MAX_DAILY_VOICE_INTERACTIONS=100
BEDTIME_HOUR=21
WAKEUP_HOUR=7

# Performance
MAX_CONCURRENT_FAMILY_MEMBERS=10
RESPONSE_TIMEOUT_SECONDS=30
MEMORY_RETENTION_DAYS=365

# External Services (optional)
OPENAI_API_KEY=your-openai-api-key  # For fallback LLM services
WEATHER_API_KEY=your-weather-api-key
CALENDAR_URL=your-family-calendar-url

# Backup and Maintenance
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
MAINTENANCE_WINDOW_START=02:00
MAINTENANCE_WINDOW_END=04:00